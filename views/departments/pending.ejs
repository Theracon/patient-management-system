<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <header class="bg-light p-5 rounded-lg m-3 text-center" id="header">
        <div style="display: flex; align-items: center; justify-content: center;">
            <img class="logo" src="https://i.ibb.co/PmwPpHt/24-3.png" alt="Icon-only" border="0" alt="Fastclinic logo">
        </div>
        <h1 class="header-h1-text">Activation Pending</h1>
    </header>
    <div class="container">
        <%- include("../partials/alert.ejs") %>
        <br>
        <% if(!currentUser.account_disabled || currentUser.account_disabled == false) { %>
            <div class="container small-content drop__shadow">
                <small><i class="fas fa-hourglass-half big-icon"></i></small><br><br>
                <small>Your profile has been successfully created and is pending approval.</small>
                <small>Refresh this page often. If your account is not live in 24 hours, please <a href="/contact">contact us</a>.</small>
            </div>
        <% } %>
        <% if(currentUser.account_disabled) { %>
            <div class="container small-content drop__shadow">
                <small><i class="fas fa-hourglass-half big-icon"></i></small><br><br>
                <small>Your account is temporarily disabled.</small>
                <br><br><br>
                <form action="/hospitals/<%=currentUser.username%>/reactivate?_method=PUT" method="POST" style="margin: 0; padding: 0; height: fit-content;">
                    <input type="submit" class="button btn btn-warning" value="Reactivate my account">
                </form>
            </div>
        <% } %>
        <br><br><br><br><br>
    </div>
</div>
<div style="height: 50vh;"></div>

<%- include("../partials/footer.ejs") %>