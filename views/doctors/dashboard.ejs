<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <header class="bg-light p-5 rounded-lg m-3 text-center" id="header">
        <div style="display: flex; align-items: center; justify-content: space-between;">
            <a href="/doctors/<%= user.username %>/dashboard"><img class="logo" src="https://i.ibb.co/PmwPpHt/24-3.png" alt="Icon-only" border="0" alt="Fastclinic logo"></a>
            <div style="display: flex; align-items: flex-start; width: 10%;">
                <% if(user.unread_notifications_count > 0) { %>
                    <p><a href="/doctors/<%=user.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: #0275D8;"></i></a></p>
                    <span><%= user.unread_notifications_count %> </span>
                <% } else { %>
                    <p><a href="/doctors/<%=user.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: white;"></i></a></p>
                <% } %>
            </div>
        </div>
        <h1 class="header-h1-text">Doctor Dashboard</h1>
        <p style="cursor: pointer;"><i class="fas fa-chevron-down" id="show_links"></i></p>
        <%- include("../partials/navbar_referrer.ejs") %>
    </header>
    <div class="container">
        <%- include("../partials/alert.ejs") %>
        <br>
        <div class="container">
            <div class="dashboard-buttons-div">
                <!--New booking-->
                <button class="dashboard-button-normal" onclick="window.location.href='/doctors/<%=user.username%>/patients/find-patient';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-person-booth extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">New booking</span>
                </button>
                <!--My bookings-->
                <button class="dashboard-button-normal" onclick="window.location.href='/doctors/<%=user.username%>/bookings';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-users extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">My bookings</span>
                </button>
                <!--View all patients-->
                <button class="dashboard-button-normal" onclick="window.location.href='/doctors/<%=user.username%>/patients/search';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-hospital-user extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">View patient info</span>
                </button>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>