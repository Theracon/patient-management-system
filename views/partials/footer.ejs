<script>
    // TOGGLE VISIBILITY OF NAVBAR LINKS
    var hiddenNavLinks = document.getElementById("hiddenNavLinks");
    var showLinksButton = document.getElementById("show_links");
    showLinksButton.addEventListener("click", function() {
        hiddenNavLinks.classList.toggle("toggleHide");
        hiddenNavLinks.classList.toggle("toggleShow");
        showLinksButton.classList.toggle("rotate_180");
    });

    // DISABLE FORM SUBMISSION IF THERE ARE INVALID FIELDS
    (function() {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation')

            // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function(form) {
                // Add 'submit' event listener to form
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()

    // CLOSE BOX THAT ALERTS HOSPITALS TO CREATE THEIR COMMISSION RATES
